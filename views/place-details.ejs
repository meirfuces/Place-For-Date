.pagination a {
  text-decoration: none;
  color: #78077c;
  padding: 0.5rem;
  border: 1px solid #78077c;
  margin: 0 0.5rem;
  background-color: #a8aa41;

}

.pagination a:hover,
.pagination a:active {
  background: #48aae4;
  color: white;
}
  h1 {
    text-align: center;
}
.card__image{
  text-align: center;

}
img {
  border: 4px solid rgb(207, 104, 104);
  border-radius: 2px;
  padding: 5px;
  width: 10px;
  margin-left: auto;
  margin-right: auto;
 
  max-width: 60%;
}

.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}
  

