<body>
<h1>פרטים נוספים</h1>

    <div class="grid">
     
        <article class="card product-item">
          <header class="card__header details">
              <h1 class="place__title">
                <%= place.title %>              </h1>
          </header>
          <h1 class="place__area"> <%= place.area %></h1>
        <!-- <p>
          <%= place.title %>
      <p> -->

      <!-- </div> -->
      <!-- <div class="card__image"> -->
        <a href="/<%= place.image %>"><img src="/<%= place.image %>" alt="<%= place.title %>" class="center">
        </a>
        
        <h1 class="place__description">
          <% if (place.description !== "") { %>
          
          <%= place.description %>
          <% } else {%>
          no more details
          <% }%>
        </h1>
          
      

  </div>
  
    <div class="card__actions">
             
             
              <form action="/"> <input type="hidden" value="<%= place._id %>" name="placeId">
              <button  class="btn" type="submit"> לדף הבית</button></form>
             
              
    </div>
  </article>
  </header>
</body>             



